{
    "openapi": "3.0.0",
    "info": {
      "title": "Image-Compression-API",
      "description": "API de compressão de imagens ",
      "version": "1.0.0"
    },
    "paths": {
      "/upload": {
        "post": {
          "summary": "Upload de imagem",
          "description": "Endpoint para fazer upload de uma imagem",
          "requestBody": {
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string",
                      "format": "binary"
                    },
                    "quality": {
                      "type": "integer",
                      "description": "Qualidade da compressão da imagem. Valor padrão é 50. Especifique um valor entre 1 e 100."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Arquivo enviado com sucesso",
              "content": {
                "text/plain": {
                  "example": "Arquivo enviado com sucesso!"
                }
              }
            },
            "400": {
              "description": "Erro ao enviar o arquivo",
              "content": {
                "application/json": {
                  "example": {
                    "message": "erro: mensagem de erro",
                    "status": "Erro"
                  }
                }
              }
            }
          }
        }
      },
      "/{filename}": {
        "get": {
          "summary": "Buscar imagens",
          "description": "Endpoint para buscar as imagens comprimidas ou em seu tamanho completo",
          "parameters": [
            {
              "name": "filename",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "Nome do arquivo da imagem junto da extensão"
            },
            {
              "name": "size",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": ["min", "full"]
              },
              "description": "Tamanho da imagem (min: comprimido | full: tamanho completo, não comprimido)"
            }
          ],
          "responses": {
            "200": {
              "description": "Arquivo de imagem",
              "content": {
                "image/png": {},
                "image/jpeg": {},
                "image/webp": {},
                "image/gif": {}
              }
            },
            "400": {
              "description": "Erro ao recuperar o arquivo",
              "content": {
                "application/json": {
                  "example": {
                    "message": "erro: mensagem de erro",
                    "status": "Erro"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  
  